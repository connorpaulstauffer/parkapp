<% provide(:title, @user.name) %>
<div class="container"> 
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      </section>
      <section class="image_form">
          <%= render 'shared/image_form' %>
        </section>
    </aside>
    <div class="col-md-8">
      <% if @user.reviews.any? %>
        <h3>Reviews (<%= @user.reviews.count %>)</h3>
        <ol class="reviews">
          <%= render @reviews %>
        </ol>
        <%= will_paginate @reviews %>
      <% end %>
    </div>
    <div class="col-md-8">
      <% if @user.images.any? %>
        <h3>Images (<%= @user.images.count %>)</h3>
        <ol class="reviews">
          <%= render @images %>
        </ol>
        <%= will_paginate @images %>
      <% end %>
    </div>
  </div>
</div> 